<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!--    Console appender-->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%msg%n</Pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger name="com.soft.homework.App" level="INFO">
        <appender-ref ref="CONSOLE"/>
    </logger>

</configuration>